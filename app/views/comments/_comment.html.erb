<div class="comment">
  <%= render 'shared/link', record: comment,
   activate_id: dom_id(comment, :edit) %>
  <p>
    <strong><%= link_to "#{comment.user.username}(#{comment.user.email })",
      comment.user  %></strong>
    <i><%= display_time(comment.created_at) %></i>
  </p>
  <div class="comment-content">
    <%= markdown(comment.content) %>
  </div> 
  <div class="chip blue">
      <%= link_to pluralize(comment.get_upvotes.size, 'like'), like_comment_path(comment), method: :put,
         class: 'white-text tooltipped',
         data: { position: :left, delay: 10, tooltip: "Like comment"}%>
    </div>
  <div class="divider"></div>
</div>